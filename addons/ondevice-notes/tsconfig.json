{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "rootDir": "./src",
    "module": "ES6",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "ES2016",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
